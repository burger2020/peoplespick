<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#C2185B</item>
        <item name="colorAccent">#FF5252</item>
        <item name="android:textColorSecondary">#ff1744</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="actionBarSize">@dimen/toolbar_height_size</item>
    </style>
    <!--<style name="AppTheme.NoActionBar">-->
    <!--&lt;!&ndash;<item name="windowActionBar">false</item>&ndash;&gt;-->
    <!--&lt;!&ndash;<item name="windowNoTitle">true</item>&ndash;&gt;-->
    <!--</style>-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>